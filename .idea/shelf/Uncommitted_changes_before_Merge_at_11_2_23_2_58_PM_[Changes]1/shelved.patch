+    grd(2,iat) = grd(2,iat) + dr(2) 
+    grd(3,iat) = grd(3,iat) + dr(3)
+    grd(1,jat) = grd(1,jat) - dr(1)
+    grd(2,jat) = grd(2,jat) - dr(2)
+    grd(3,jat) = grd(3,jat) - dr(3)
+
