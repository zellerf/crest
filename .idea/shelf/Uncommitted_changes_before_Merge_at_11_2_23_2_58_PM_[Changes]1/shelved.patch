+subroutine getmaxdist(n,xyz,at,dist)
+  implicit none
+  integer :: n
+  integer :: at(n)
+  integer :: i
+  real(wp) :: xyz(3,n)
+  real(wp) :: dist
+  real(wp) :: dum
+
+  dist = 0.0d0
+
+  do i = 1,n
+    dum = sqrt(xyz(1,i)**2 + xyz(2,i)**2 + xyz(3,i)**2)
+    dum = dum + rcov(at(i))
+    if (dum .gt. dist) dist = dum
+  end do
