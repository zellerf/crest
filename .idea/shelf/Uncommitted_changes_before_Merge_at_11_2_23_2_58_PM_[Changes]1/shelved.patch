+  subroutine boltz(n,t,e,p)
+!*********************************
+!* Boltzmann weighting routines
+!* formerly in "boltz.f"
+!*********************************
+    integer,intent(in) :: n
+    real(wp) :: e(*),p(*)
+    real(wp),allocatable :: e2(:)
+    real(wp) :: t,f,hsum,esum
+    integer :: i
+    allocate (e2(n))
+    !f=8.314*t/4.184d+3
+    f = 0.593d0/298.15d0
+    f = f*t
+    esum = 0
+    do i = 1,n
+      !e2(i) = (e(i) -e(1))* 627.5095
+      e2(i) = e(i)
+    end do
+
+    do i = 1,n
+      esum = esum+exp(-e2(i)/f)
+    end do
+    hsum = 0
+    do i = 1,n
+      p(i) = exp(-e2(i)/f)/esum
+    end do
+    deallocate (e2)
+  end subroutine boltz
