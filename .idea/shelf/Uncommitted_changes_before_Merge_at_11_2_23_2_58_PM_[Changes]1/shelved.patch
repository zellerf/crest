+  subroutine revlin(k,i,j)
+!******************************************
+!* determine i and j for a given index k
+!* (i.e., the reverse of the lin function)
+!******************************************
+    implicit none
+    integer(int64) :: k,b,x
+    integer :: i,j
+    real(wp) :: kf
+    real(wp) :: idum
+    kf = real(k,8)
+    idum = 1.0+8.0*kf
+    !idum = sqrt(idum)
+    idum = idum**0.5
+    idum = (1.0+idum)/2.0
+    i = floor(idum)
+    x = i-1
+    x = x*i
+    b = x/2
+    b = k-b
+    j = int(b)
+    return
+  end subroutine revlin
