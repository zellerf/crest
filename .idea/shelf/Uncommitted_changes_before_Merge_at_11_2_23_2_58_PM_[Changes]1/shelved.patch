+  function count_columns(str) result(columns)
+!***************************************************
+!* count columns of a row based on number of commas
+!***************************************************
+    implicit none
+    character(len=*) :: str
+    character(len=:),allocatable :: atmp
+    integer :: columns
+    integer :: l,commas,i
+    atmp = adjustl(trim(str))
+    l = len_trim(atmp)
+    commas = 0
+    columns = 1
+    if (l < 1) return
+    do i = 1,l
+      if ((atmp(i:i) == ',')) then
+        commas = commas+1
+      end if
+    end do
+    columns = columns+commas
+    return
+  end function count_columns
