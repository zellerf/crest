+  subroutine revlin_count(k,i,j,dimij)
+!********************************************
+!* determine i and j for a given index k
+!* by counting until k is reached
+!* (only for testing, because too expensive)
+!********************************************
+    implicit none
+    integer(int64) :: k
+    integer :: i,j
+    integer :: a,b
+    integer :: dimij
+    integer(int64) :: kdum
+    OUTER: do a = 1,dimij
+      do b = 1,a
+        kdum = lina(a,b)
+        if (kdum == k) then
+          i = a
+          j = b
+          exit OUTER
+        end if
+      end do
+    end do OUTER
+    return
+  end subroutine revlin_count
