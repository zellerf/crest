+!> a minimal implementation for storing an ORCA input file
+
+module orca_type
+  use crest_parameters,only:wp,stdout,stderr,autoaa
+  use iomod
+  use strucrd
+  implicit none
+  public
+
+  type :: orca_input
+    character(len=:),allocatable :: cmd
+    integer :: nlines = 0
+    character(len=:),allocatable :: input(:)
