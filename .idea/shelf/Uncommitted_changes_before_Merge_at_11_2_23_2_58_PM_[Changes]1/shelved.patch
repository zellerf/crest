+subroutine wall_dummypot(ellips,xyz,at,nat)
+  implicit none
+
+  integer :: i
+  integer :: nat,ich
+  integer :: at(nat)
+
+  real(wp) :: xyz(3,nat)
+  real(wp) :: r,dum
+  real(wp) :: ellips(3)
+
+  real(wp) :: point(3)
+
+!---- ellipsoide has to statisfy x/a + y/b + z/c = 1
+
+  call init_random_seed()
+  open (file='wall.coord',newunit=ich)
+  write (ich,'(a)') "$coord"
+
+  do i = 1,nat
